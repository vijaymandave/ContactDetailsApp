@model IEnumerable<WebApp.Models.ContactDetail>

@{
    ViewBag.Title = "GetAllContacts";
    Layout = null;
}

<h2>GetAllContacts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <div></div>
                @Html.ActionLink("Edit", "Edit","Contact", new { id = item.Id }, new { @class = "btn btn-primary" }) |
               
                @using (Html.BeginForm("Delete", "Contact", new { id = item.Id },FormMethod.Post,null))
                {
                    @*@Html.Hidden("Id", item.Id)*@
                    <input type="submit" value="Delete"  class="btn btn-primary" />
                }
            </td>
        </tr>
    }

</table>
